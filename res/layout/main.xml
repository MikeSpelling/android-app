<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:keepScreenOn="true" android:background="@color/background" android:id="@+id/TableLayout">
    <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Acceleration" android:tag="AccTitle" android:id="@+id/AccTitle" android:textColor="@color/text"></TextView>
        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/blankSpace" android:paddingLeft="30dp"></TextView>
        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/inGTitle" android:text="g's" android:gravity="right" android:paddingLeft="100dp" android:textColor="@color/text"></TextView>
    </TableRow>
    <TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="X: " android:tag="XTitle" android:id="@+id/XTitle" android:textColor="@color/text"></TextView>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:focusableInTouchMode="true" android:text="..." android:id="@+id/textX" android:textColor="@color/text"></TextView>
        <TextView android:gravity="right" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/textXG" android:text="..." android:textColor="@color/text"></TextView>
    </TableRow>
    <TableRow android:id="@+id/tableRow3" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Y: " android:tag="YTitle" android:id="@+id/YTitle" android:textColor="@color/text"></TextView>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="..." android:id="@+id/textY" android:textColor="@color/text"></TextView>
        <TextView android:gravity="right" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/textYG" android:text="..." android:textColor="@color/text"></TextView>
    </TableRow>
    <TableRow android:id="@+id/tableRow4" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Z: " android:tag="ZTitle" android:id="@+id/ZTitle" android:textColor="@color/text"></TextView>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="..." android:id="@+id/textZ" android:textColor="@color/text"></TextView>
        <TextView android:gravity="right" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/textZG" android:text="..." android:textColor="@color/text"></TextView>
    </TableRow>
    <TableRow android:id="@+id/tableRow5" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Max: " android:id="@+id/MaxAccTitle" android:textColor="@color/text"></TextView>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="..." android:id="@+id/textMaxAcc" android:textColor="@color/text"></TextView>
        <TextView android:id="@+id/textMaxAccG" android:textColor="@color/text" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="..." android:gravity="right"></TextView>
    </TableRow>
    <TableRow android:id="@+id/tableRow6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@color/darkerBackground">
        <TextView android:gravity="fill" android:id="@+id/lineBreak" android:layout_height="match_parent" android:layout_width="match_parent" android:layout_gravity="clip_horizontal|fill"></TextView>
    </TableRow>
    <TableRow android:id="@+id/tableRow7" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:id="@+id/AzimuthTitle" android:textColor="@color/text" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Direction"></TextView>
        <TextView android:id="@+id/textAzimuth" android:textColor="@color/text" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="..."></TextView>
    </TableRow>
    <TableRow android:id="@+id/tableRow8" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@color/background">
        <TextView android:id="@+id/PitchTitle" android:textColor="@color/text" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Pitch: "></TextView>
        <TextView android:id="@+id/textPitch" android:textColor="@color/text" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="..."></TextView>
    </TableRow>
    <TableRow android:id="@+id/tableRow9" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:id="@+id/RollTitle" android:textColor="@color/text" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Roll: "></TextView>
        <TextView android:id="@+id/textRoll" android:textColor="@color/text" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="..."></TextView>
    </TableRow>
    <TableRow android:id="@+id/tableRow10" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@color/darkerBackground">
        <TextView android:id="@+id/lineBreak2" android:layout_height="match_parent" android:layout_width="match_parent"></TextView>
    </TableRow>
    <TableRow android:id="@+id/tableRow11" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@color/background">
        <TextView android:id="@+id/ProximityTitle" android:textColor="@color/text" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Proximity: "></TextView>
        <TextView android:id="@+id/textProx" android:textColor="@color/text" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="..."></TextView>
    </TableRow>
    <TableRow android:id="@+id/tableRow12" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@color/darkerBackground">
        <TextView android:id="@+id/LineBreak3" android:background="@color/darkerBackground" android:layout_height="wrap_content" android:layout_width="match_parent"></TextView>
    </TableRow>
    <TableRow android:id="@+id/tableRow13" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:id="@+id/LightTitle" android:textColor="@color/text" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Ambient Light: "></TextView>
        <TextView android:id="@+id/textLight" android:textColor="@color/text" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="..."></TextView>
    </TableRow>
    <TableRow android:id="@+id/tableRow14" android:layout_width="wrap_content" android:layout_height="wrap_content">
    </TableRow>
    <Button android:text="Exit" android:id="@+id/exitButton" android:layout_gravity="bottom" android:layout_height="match_parent" android:layout_width="match_parent" android:textColor="@color/text"></Button>
</TableLayout>
